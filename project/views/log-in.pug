
div(class="log-in-container")
    div(class="errors-container")
    h2 Log In
    form(class="log-in-form" action="/users/token" method="post")
        .form-group
            label(for='email') Email Address
            input#email.form-control(type='email' name="email" placeholder='Enter email')
        .form-group
            label(for='password') Password
            input#password.form-control(type='password' name="password" placeholder='Password')
        button.btn.btn-primary(type='submit') Log In
        a(href='/sign-up') Don't have an account? Sign up here.
script(type="module" src="/public/js/log-in.js") 